    "P20Caching": "None",
    "P30Caching": "None",
    "AssetLocation": "https://storarmtemplates.blob.core.windows.net/dsc/",
    "SecondaryDCModulesURL": "[concat(variables('AssetLocation'),'CreateADBDC.ps1.zip')]",
    "SecondaryDCConfigurationFunction": "createadbdc.ps1\\CreateADBDC"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('SecondaryDCVMName')]",
      "location": "[parameters('Region')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('MachineClass')]"
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('AvailabilitySetName'))]"
        },
        "osProfile": {
          "computerName": "[parameters('SecondaryDCPCName')]",
          "adminUsername": "[parameters('AdminUsername')]",
          "adminPassword": "[parameters('DomainPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('ImagePublisher')]",
            "offer": "[parameters('ImageOffer')]",
            "sku": "[parameters('ImageSKU')]",
            "version": "[parameters('ImageVersion')]"
          },
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri": "[concat('http://',parameters('SecondaryDCStorageName'),'.blob.core.windows.net/vhds/',parameters('SecondaryDCVMName'),'osdisk.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": "[variables('SecondaryDisks')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('SecondaryDCNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "type": "extensions",
          "name": "CreateBDC",
          "apiVersion": "2015-06-15",
          "location": "[parameters('Region')]",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('SecondaryDCVMName'))]",
          ],
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.2",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "ModulesUrl": "[variables('SecondaryDCModulesURL')]",
              "ConfigurationFunction": "[variables('SecondaryDCConfigurationFunction')]",
              "Properties": {
                "DomainName": "[parameters('DomainName')]",
                "AdminCreds": {
                  "UserName": "[parameters('AdminUsername')]",
                  "Password": "PrivateSettingsRef:AdminPassword"
                }
              }
            },
            "protectedSettings": {
              "Items": {
                "AdminPassword": "[parameters('DomainPassword')]"
              }
            }
          }
        }
      ]
    }
